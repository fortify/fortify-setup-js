{
  "$schema": "https://raw.githubusercontent.com/Microsoft/azure-pipelines-task-lib/master/tasks.schema.json",
  "id": "00000000-0000-0000-0000-000000000000",
  "name": "FortifySetup",
  "friendlyName": "Fortify Setup",
  "description": "Initialize Fortify tools using @fortify/setup",
  "helpMarkDown": "Initialize Fortify tools for security scanning. [More Information](https://github.com/fortify/fortify-setup-js)",
  "category": "Utility",
  "author": "Fortify",
  "version": {
    "Major": 1,
    "Minor": 0,
    "Patch": 0
  },
  "instanceNameFormat": "Initialize Fortify Tools",
  "inputs": [
    {
      "name": "tools",
      "type": "string",
      "label": "Tools to Initialize",
      "defaultValue": "fcli:auto,sc-client:auto",
      "required": false,
      "helpMarkDown": "Comma-separated list of tools with versions (e.g., fcli:auto,sc-client:24.4, or fcli:latest,sc-client:auto)"
    },
    {
      "name": "verbose",
      "type": "boolean",
      "label": "Verbose Output",
      "defaultValue": "false",
      "required": false,
      "helpMarkDown": "Enable verbose output for debugging"
    }
  ],
  "execution": {
    "Node20": {
      "target": "dist/index.js"
    }
  }
}
